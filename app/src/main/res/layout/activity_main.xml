<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#212529"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="@string/titleDrinks"
        android:textSize="42sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.05"
        android:textColor="@color/white"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/subTitle_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/title_drinks"
        app:layout_constraintTop_toBottomOf="@+id/title_drinks"
        app:layout_constraintEnd_toEndOf="@+id/title_drinks"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:text="@string/subTitleDrinks"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#c4af9b"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_drinks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subTitle_drinks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/rounded"

        />

</androidx.constraintlayout.widget.ConstraintLayout>